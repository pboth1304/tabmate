{
  "name": "@tabmate/core",
  "author": {
    "name": "Pascal Bothner",
    "email": "pascalcodes@pm.me"
  },
  "repository": {
    "type": "git",
    "url": "git+github.com/pboth1304/tabmate.git"
  },
  "description": "TabMate is a lightweight (~<1KB gzipped), framework-agnostic JavaScript library for enabling tab/indentation behavior to HTML elements like `textarea` â€” just like in modern code editors.",
  "keywords": [
    "textarea",
    "indentation",
    "tab",
    "editor",
    "code-editor",
    "shift-tab",
    "tab-key",
    "text-editor",
    "form",
    "web-editor",
    "indent",
    "dedent",
    "typescript",
    "multiline",
    "text-input",
    "input-enhancement"
  ],
  "private": false,
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/tabmate.umd.js",
  "module": "./dist/tabmate.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.2",
    "vue": "^3.5.17"
  }
}
